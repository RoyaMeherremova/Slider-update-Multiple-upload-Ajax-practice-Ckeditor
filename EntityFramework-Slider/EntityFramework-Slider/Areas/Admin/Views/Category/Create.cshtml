@model Category   
@*Category tipde qayidir actiona*@
@{
    ViewData["Title"] = "Create";
}
 <div class ="container my-5">
  <form class="forms-sample" asp-action="Create">

        <textarea class="form-control" id="category-text" asp-for="Name" rows="5"></textarea>   @*asp-for-Modelin icindekilerin adi ile eyni olamlidi(table-colum)*@  @*form submit olanda inputa yazdiqimiz Model-tipinde qayidir actiona*@

        <span class="text-danger" asp-validation-for="Name"></span>  @*asp-validation-for(input ici bos olanda submit olunarsa error mesaj gelecek bura Model icindeki [Required]*@
                    <div class="buttons my-3">
                     <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                    </div>

                  </form>

 </div>

 @section Scripts{

    <partial name="_ValidationScriptsPartial" />  @*seliqe ucun scriptleri partiala cixariiriq*@
    <script src="~/ckeditor/ckeditor.js"></script>  @*checkeditor script-yeni yaz elave edende tagnan yaransin deye istifade olunur*@
    <script>
        CKEDITOR.replace("category-text")   /*text-areani CKEDITOR-LA evezle*/
    </script>

 }