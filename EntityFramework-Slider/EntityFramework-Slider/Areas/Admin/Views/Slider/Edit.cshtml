@model Slider
@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5">
   
    <div class="slider-content my-5" style="width:200px;height:250px;">
        <img style="width:100%;height:100%;" src="~/img/@Model.Image" />
    </div>
    <form class="forms-sample" asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
         <div class="mt-5">
            <label for="formFile" class="form-label">Add Photo</label>
            <input type="file" class="form-control" id="customFile" asp-for="Photo" />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div> 
                    <div class="buttons my-3">
                     <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                    </div>
                
   </form>
    
</div>

@section Scripts{

    <partial name="_ValidationScriptsPartial" />  @*seliqe ucun scriptleri partiala cixariiriq*@

 }