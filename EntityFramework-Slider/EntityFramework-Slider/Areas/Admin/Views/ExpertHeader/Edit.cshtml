@model ExpertsHeader 
@*Category tipde qayidir actiona*@
@{
    ViewData["Title"] = "Edit";
}
 <div class ="container my-5">
  <form class="forms-sample" asp-action="Edit" method="post">

        <input type="text" style="border: 2px solid darkgrey;border-radius:5px;" class="form-control" id="customFile" asp-for="Title" />  @*asp-for-Modelin icindekilerin adi ile eyni olamlidi(table-colum)*@  @*form submit olanda inputa yazdiqimiz Model-tipinde qayidir actiona*@
                    <span class="text-danger" asp-validation-for="Title"></span>  @*asp-validation-for(input ici bos olanda submit olunarsa error mesaj gelecek bura Model icindeki [Required]*@
        <input type="text" style="border: 2px solid darkgrey ;border-radius:5px;margin-top:10px;" class="form-control" id="customFile" asp-for="Description" />  @*asp-for-Modelin icindekilerin adi ile eyni olamlidi(table-colum)*@  @*form submit olanda inputa yazdiqimiz Model-tipinde qayidir actiona*@
                    <span class="text-danger" asp-validation-for="Description"></span>                    
                    <div class="buttons my-3">
                     <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                    </div>

  </form>

 </div>


@section Scripts{

    <partial name="_ValidationScriptsPartial" />  @*seliqe ucun scriptleri partiala cixariiriq*@

 }