@model IEnumerable<Blog>
@{
    ViewData["Title"] = "Blog";
}

<div class="container my-5">
    <a class="btn btn-success text-white" asp-action="Create" style="float:right">Create</a>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Create date</th>
                    <th>Operations</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var blog in Model)
                {
                    <tr>

                        <td class="py-1">
                            <img src="~/img/@blog.Image" style="width:70px;height:70px" alt="image" />
                        </td>
                        <td>
                            @blog.Header
                        </td>
                        <td>

                            @blog.Date.ToString("dd.mm.yyyy")
                        </td>
                        <td style="display: flex; gap: 10px;">
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@blog.Id">Info</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@blog.Id">Edit</a>
                            <form asp-action="Delete" asp-route-id="@blog.Id" method="post">           
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>

                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>



</div>

