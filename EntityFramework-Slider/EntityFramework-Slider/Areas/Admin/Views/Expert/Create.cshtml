@model Experts
@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">
    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">

        <div class="mt-5">
            <label for="formFile" class="form-label">Add Photo</label>
            <input type="file" class="form-control" id="customFile" asp-for="Photo" />
            <span class="text-danger" asp-validation-for="Photo">@ViewBag.error</span>
        </div>

        <div class="mt-5">
            <label for="formFile" class="form-label">Add Name</label>
            <input type="text" class="form-control" id="customFile" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name">@ViewBag.error</span>
        </div>
        <div class="mt-5">
            <label for="formFile" class="form-label">Add Position</label>
            <input type="text" class="form-control" id="customFile" asp-for="Position" />
            <span class="text-danger" asp-validation-for="Position">@ViewBag.error</span>
        </div>

        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>

</div>

@section Scripts{

    <partial name="_ValidationScriptsPartial" />
 

 }
